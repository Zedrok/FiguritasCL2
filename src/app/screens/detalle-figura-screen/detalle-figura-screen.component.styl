#imagen
  margin-top: 20px
  border-radius: 5%
  border-style: ridge

#detalle
  padding-top: 20px
  padding-left: 80px
  margin-left: 2px
  margin-top: 20px
  background: rgba(198, 200, 109, 0.411)
  border-radius: 3%
  border-style: solid
  border-width: thin
  width: 100%
  height: 250px

i
  padding-top: 20px
  margin: 40px

#comprar
  width: 100%
  height: 100px

.btn
  margin-top: 10px
  margin-left: 80px
  padding-left: 60px
  padding-right: 100px

#Resumen
  width: 100%
  height: 600px

#Feedback
  width: 100%
  height: 100%
  background: white

li
  text-decoration: none
  list-style: none

.btn-success
  height: 126px



@media (max-width:600px)
  #imagen
    padding-top: 20px
    margin-top: 20px
    height: 300px
    border-radius: 5%
    border-style: ridge

  #detalle
    padding-top: 20px
    padding-left: 5px
    margin-left: 2px
    margin-top: 20px
    background: rgba(198, 200, 109, 0.411)
    border-radius: 3%
    border-style: solid
    border-width: thin
    width: 100%
    height: 250px

  #comprar
    width: 20%
    height: 20px

  .btn
    margin-top: 0px
    margin-bottom: 0px
    margin-left: 5px

  #Resumen
    width: 100%
    height: 600px

  #Feedback
    width: 100%
    height: 400px
    background: darkgreen

  .h3
    font-size: 20px

  .h4
    font-size: 15px

  .h5
    font-size: 20px

