@media (max-width:2000px)
  .cabecera
    padding: 0
    margin: 0
    text-decoration: none
    list-style: none

  .logo
    height: 50px

  .navbar
    background-color: #E6DF44
    position: relative
    width: 100%
    z-index: 9999

  .btn
    margin-left: 10px

  .form-inline
    margin-left: 0px
    left: 30px
    margin-right: 0px
    padding-left: 100px

  /**MENU*.nav-item
    {
        padding-left: 70px;
        margin-left:100px
    }*/
  .navbar ul
    margin-left: 20px
    padding-left: 120px

  .navbar ul li
    margin-right: 50px
    margin-left: 50px

  .navbar ul li a:hover
    color: lavenderblush

  .nav-link
    color: black

  .dropdown-menu
    background-color: rgba(255, 255, 250, 0.904)

  .dropdown-menu a:hover
    background-color: #E6DF44

